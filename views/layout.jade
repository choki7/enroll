        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') 自主招生系统
        #navbar.navbar-collapse.collapse(aria-expanded='false', style='height: 1px;')
          ul.nav.navbar-nav
            li.active
              a(href='#') Home
            li
              a(href='#about') About
            li
              a(href='#contact') Contact
          ul.nav.navbar-nav.navbar-right.enroll-navbar-right
            li
              a.btn.btn-material-grey-600.btn-inverse(href='#/login') 登陆
            li
              a.btn.btn-material-grey-500.btn-inverse(href='#/register') 注册

